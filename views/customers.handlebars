<div class="container">

	{{#if productList}}
	<ol class="breadcrumb">
		<li>
			<a href="/">Home</a>
		</li>
		<li>
			<a href="/customers">Customers</a>
		</li>
		<li class="active">View Customer</li>
	</ol>
	{{else}}
	<ol class="breadcrumb">
		<li>
			<a href="/">Home</a>
		</li>
		<li class="active">Customers</li>
	</ol>
	{{/if}}

	<style type="text/css">

		#calendar {
			width: 700px;
			/*height: 200px;*/
			/*border: grey solid;*/
			margin-bottom: 10px;
		}

		#toggle-calendar {
			color: green;
			margin-bottom: 10px;
			margin-top: 10px;
		}

		#insert-calendar {
			border-top: thin black solid;
			padding-top: 10px;
		}


	</style>

	<div class="container-fluid">

		<div class="col-lg-12">

			<a href="#" id="toggle-calendar" class="col-sm-2 btn btn-default">
				<b>Toggle Calendar</b>
			</a>

		</div>

		<div class="col-lg-12" id="insert-calendar">
			<div id="calendar">

			</div>
		</div>

	</div>

	<div class="container-fluid">

		<ul class="nav nav-pills nav-justified">
			<li role="presentation">
				<a href="/add/customer">Add Customer</a>
			</li>
			<li role="presentation">
				<a href="/customer/transactions">Customer Transactions</a>
			</li>
		</ul>

	</div>

	{{#if productList}}
	
		<h2>Showing Customer</h2>

	{{else}}
	
		<h2>Showing All Customers</h2>

	{{/if}}

	<table id="customer-table" class="table table-striped table-condensed">
		<thead>
			<th>Company</th><th>Name</th><th>Phone</th><th>E-mail</th><th>Invoices</th>
		</thead>
		<tbody>
		{{#each customerList}}
			<tr>
				<td>{{this.company}}</td><td>{{this.contact}}</td>
				<td>{{this.phone}}</td><td>{{this.email}}</td>
				<td>
					<a href="/customers/{{this.id}}"><span>View</span></a>
				</td>
				<td><a href="/edit/customer/{{this.id}}">Edit</a> </td>
				<td><a href="/deactivate/customer/{{this.id}}">Deactivate</a></td>
			</tr>
		{{/each}}
		</tbody>
	</table>

	{{#each productList}}
		<div class="panel panel-default col-md-6">
			<div class="panel-body">

				<div class="input-group">
				  <span style="width:100px" class="input-group-addon" id="product_name"><b>Product</b></span>
				  <input style="width:300px" name="product_name" value="{{this.product_name}}" type="text" class="form-control" placeholder="" aria-describedby="product_name" readonly>
				</div>

				<div class="input-group">
				  <span style="width:100px" class="input-group-addon" id="comments"><b>Comments</b></span>
				  <textarea style="width:300px" name="comments" type="text" class="form-control" placeholder="" aria-describedby="comments" readonly>{{this.comments}}</textarea>
				</div>

				{{!-- {{#if this.invoice_link}} --}}
				<div class="input-group">
				  <span style="width:100px" class="input-group-addon" id="invoice_link"><b>Invoice</b></span>
				  <a href='{{this.invoice_link}}' style="width:300px" name="invoice_link" type="text" class="form-control" placeholder="" aria-describedby="invoice_link" readonly>{{this.invoice_link}}</a>
				</div>
				{{!-- {{/if}} --}}

			</div>	
		</div>
	{{/each}}

</div>