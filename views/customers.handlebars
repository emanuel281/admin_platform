<div class="container">

	{{#if addressList}}
	<ol class="breadcrumb">
		<li>
			<a href="/">List Customers</a>
		</li>
		<li class="active">View Customer</li>
	</ol>
	{{else}}
	<ol class="breadcrumb">
		<li class="active">List Customers</li>
	</ol>
	{{/if}}

	<h2>Showing All Customers</h2>

	<table id="customer-table" class="table table-striped table-condensed">
		<thead>
			<td></td><th>Contact</th><th>Company Name</th><th>Phone</th><th>E-mail</th><th>Website</th>
		</thead>
		<tbody>
		{{#each customerList}}
			<tr>
				<td>
					<a href="/customers/{{this.id}}"><span>&gt</span></a>
				</td><td>{{this.fullname}}</td>
				<td>{{this.company_name}}</td><td>{{this.phone}}</td><td>{{this.email}}</td><td><a href="http://{{this.website}}"></a>{{this.website}}</td>
			</tr>
		{{/each}}
		</tbody>
	</table>

	{{#each addressList}}
		<div class="panel panel-default col-md-6">
			<div class="panel-body">

				<div class="input-group">
				  <span style="width:100px" class="input-group-addon" id="unit"><b>Unit</b></span>
				  <input style="width:300px" name="unit" value="{{this.unit}}" type="text" class="form-control" placeholder="" aria-describedby="unit" readonly>
				</div>

				<div class="input-group">
				  <span style="width:100px" class="input-group-addon" id="address"><b>Address</b></span>
				  <input style="width:300px" name="address" value="{{this.address}}" type="text" class="form-control" placeholder="" aria-describedby="address" readonly>
				</div>

				<div class="input-group">
				  <span style="width:100px" class="input-group-addon" id="city"><b>City</b></span>
				  <input style="width:300px" name="city" value="{{this.city}}" type="text" class="form-control" placeholder="" aria-describedby="city" readonly>
				</div>

				<div class="input-group">
				  <span style="width:100px" class="input-group-addon" id="state"><b>State</b></span>
				  <input style="width:300px" name="state" value="{{this.state}}" type="text" class="form-control" placeholder="" aria-describedby="state" readonly>
				</div>

				<div class="input-group">
				  <span style="width:100px" class="input-group-addon" id="country"><b>Country</b></span>
				  <input style="width:300px" name="country" value="{{this.country}}" type="text" class="form-control" placeholder="" aria-describedby="country" readonly>
				</div>

				<div class="input-group">
				  <span style="width:100px" class="input-group-addon" id="zip_code"><b>Zip</b></span>
				  <input style="width:300px" name="zip_code" value="{{this.zip_code}}" type="text" class="form-control" placeholder="" aria-describedby="zip_code" readonly>
				</div>
			</div>	
		</div>
	{{/each}}
</div>