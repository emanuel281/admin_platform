<div class="container-fluid">

	<ol class="breadcrumb">
		<li>
			<a href="/">Home</a>
		</li>
		<li>
			<a href="/invoices">Customers</a>
		</li>
		<li class="active">New Customer</li>
	</ol>

	<form class="form" action="/add/customer" method="POST" enctype="multipart/form-data">

		<div class="col-md-12">

			<div class="bs-example bs-example-tabs" data-example-id="togglable-tabs">
				<ul class="nav nav-tabs" id="myTabs" role="tablist">
					
					<li role="presentation" class="">
						<a href="#personal-info" id="personal-info-tab" role="tab" data-toggle="tab" aria-controls="personal-info" aria-expanded="true">Personal Info</a>
					</li>
				</ul>

				<div class="tab-content" id="myTabContent">
					<div class="tab-pane fade" role="tabpanel" id="personal-info" aria-labelledby="personal-info-tab">
						<div class="panel panel-default col-md-6">
							<div class="panel-body">

								<div class="input-group">
								  <span style="width:100px" class="input-group-addon" id="company">Company</span>
								  <input style="width:300px" type="text" class="form-control" name="company" placeholder="" aria-describedby="company">
								</div>

								<div class="input-group">
								  <span style="width:100px" class="input-group-addon" id="contact">Name</span>
								  <input style="width:300px" type="text" class="form-control" placeholder="" aria-describedby="contact" name="contact">
								</div>

								<div class="input-group">
								  <span style="width:100px" class="input-group-addon" id="phone">Phone</span>
								  <input style="width:300px" name="phone" type="text" class="form-control" placeholder="" aria-describedby="phone">
								</div>

								<div class="input-group">
								  <span style="width:100px" class="input-group-addon" id="email">E-mail</span>
								  <input style="width:300px" name="email" type="email" class="form-control" placeholder="" aria-describedby="email">
								</div>

								<div class="input-group">
								  <span style="width:100px" class="input-group-addon" id="product_name">Product</span>
								  <input style="width:300px" name="product_name" type="text" class="form-control" placeholder="" aria-describedby="product_name">
								</div>

								<div class="input-group">
								  <span style="width:100px" class="input-group-addon" id="invoice_file">Invoice</span>
								  <input style="width:300px" name="invoice_file" type="file" class="form-control" placeholder="" aria-describedby="invoice_file" required>
								</div>

								<div class="input-group">
								  <span style="width:100px" class="input-group-addon" id="invoice_link">Inv. Name</span>
								  <input style="width:300px" name="invoice_link" type="text" class="form-control" placeholder="" aria-describedby="invoice_link" required>
								</div>

								<div class="input-group">
								  <span style="width:100px" class="input-group-addon" id="comments">Comments</span>
								  <textarea style="width:300px" name="comments" type="text" class="form-control" placeholder="" aria-describedby="comments"></textarea>
								</div>

								{{!-- <div class="input-group">
								  <span style="width:100px" class="input-group-addon" id="start">Servc. Date</span>
								  <input style="width:300px" name="start" type="datepicker" class="form-control" placeholder="2016-08-28" aria-describedby="start"/>
								</div>

								<div class="input-group">
								  <span style="width:100px" class="input-group-addon" id="end">Servc. Type</span>
								  <input style="width:300px" name="end" type="text" class="form-control" placeholder="" aria-describedby="end"/>
								</div> --}}

							</div>	
						</div>

						<div class="col-md-12 pull-right">
							<div  id="next-detail">
								<button class="btn btn-success col-md-2">Save</button>
							</div>
							
							<a href="/invoices" class="btn btn-default col-md-offset-1">cancel</a>
						</div>

					</div>
				</div>
			</div>
			
		</div>
	</form>
</div>