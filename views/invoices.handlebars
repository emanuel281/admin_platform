<div class="container-fluid">

	<ol class="breadcrumb">
		<li>
			<a href="/">Home</a>
		</li>
		<li class="active">Invoices</li>
	</ol>

	<h2>Showing All Customers</h2>

	<table id="customer-table" class="table table-striped table-condensed">
		<thead>
			<th>TransactionID</th><th>Company Name</th><th>Contact</th><th>Product</th><th>Comments</th><th>Link</th>
		</thead>
		<tbody>
		{{#each invoiceList}}
			<tr>
				<td><a href="/customers/{{this.customer_id}}"><span>{{this.id}}</span></a></td>
				<td>{{this.company}}</td><td>{{this.contact}}</td>
				<td>{{this.product_name}}</td><td>{{this.comments}}</td><td><a href="{{this.invoice_link}}">{{this.invoice_link}}</a></td>
				<td><a href="/edit/customer/{{this.id}}">Edit</a> </td>
			</tr>
		{{/each}}
		</tbody>
	</table>


</div>